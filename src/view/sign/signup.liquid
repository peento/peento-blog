{% include "front/inc/header" %}

  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Sign Up</h3>
          </div>
          <div class="panel-body">
            {% if error %}
            <div class="alert alert-danger">{{error|escape}}</div>
            {% endif %}
            <form role="form" method="post" enctype="multipart/form-data">
              <input type="hidden" name="_csrf" value="{{_csrf|escape}}">
              <fieldset>
                <div class="form-group">
                  <input class="form-control" placeholder="E-mail" name="email" type="email" value="{{_server.body.email|escape}}" autofocus>
                </div>
                <div class="form-group">
                  <input class="form-control" placeholder="Password" name="password" type="password" value="{{_server.body.password|escape}}">
                </div>
                <div class="form-group">
                  <input class="form-control" placeholder="Display Name" name="display_name" type="text" value="{{_server.body.display_name|escape}}">
                </div>
                <button type="submit" class="btn btn-lg btn-success btn-block">Submit</button>
              </fieldset>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
{% include "front/inc/footer" %}
