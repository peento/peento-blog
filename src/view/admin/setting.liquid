{% assign title = "Home" %}
{% include "admin/inc/header" %}

<div class="container">
  {% if error %}
  <div class="alert alert-danger">{{error|escape}}</div>
  {% endif %}
  <form class="form-horizontal" role="form" method="post" enctype="multipart/form-data">
    <input type="hidden" name="_csrf" value="{{_csrf|escape}}">
    {% for item in config_list %}
    <div class="form-group">
      <label for="ipt-{{item.name|escape}}" class="col-sm-3 control-label">{{item.name|escape}}</label>
      <div class="col-sm-9">
        <input type="text" class="form-control" name="{{item.name|escape}}" id="ipt-{{item.name|escape}}" placeholder="" value="{{item.value|escape}}">
      </div>
    </div>
    {% endfor %}
    <div class="form-group">
      <div class="text-center">
        <button type="submit" class="btn btn-primary">Save</button>
      </div>
    </div>
  </form>
</div>

{% include "admin/inc/footer" %}

<!-- common javascript -->
<script src="{{'default/main.js'|asset_url}}"></script>
